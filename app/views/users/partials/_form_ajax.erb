<%= form_for(user, remote: true, multipart: true, html: {class: 'form-horizontal'}) do |f| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :avatar, class: 'control-label col-md-5' %>
      <div class="col-md-4">
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :first_name, class: 'control-label col-md-5' %>
      <div class="col-md-4">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: 'control-label col-md-5' %>
      <div class="col-md-4">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-6">
        <%= f.submit class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
