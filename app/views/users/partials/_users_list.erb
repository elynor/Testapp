<table class="table table-striped users_list">
  <thead>
  <tr>
    <th>Avatar</th>
    <th>First name</th>
    <th>Last name</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% users.each do |user| %>
      <tr>
        <td><%= image_tag(user.avatar) unless user.avatar.url.nil? %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user), remote: true %>
        </td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>